{
  "name": "plugin/pdc-elasticsearch",
  "description": "PDC Elasticsearch plugin",
  "homepage": "https://www.yard.nl",
  "authors": [{
    "name": "Yard | Digital Agency",
   "email": "info@yard.nl",
    "homepage": "https://www.yard.nl"
  }],
  "type": "wordpress-plugin",
  "repositories": [
    {
      "type": "vcs",
      "url": "git@bitbucket.org:openwebconcept/plugin-pdc-base.git"
    }
  ],
  "require": {
    "php": ">=7.2",
    "plugin/pdc-base": "^3.0.0"
  },
  "require-dev": {
    "10up/wp_mock": "dev-master",
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.0",
    "phpunit/phpunit": "^8.0 | ^9.0",
    "symfony/var-dumper": "^5.0",
    "szepeviktor/phpstan-wordpress": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "OWC\\PDC\\Elasticsearch\\": "./src/Elasticsearch"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OWC\\PDC\\Elasticsearch\\Tests\\": "./tests"
    }
  },
  "scripts": {
    "format": "./vendor/bin/php-cs-fixer fix",
    "phpstan": "./vendor/bin/phpstan analyse",
    "test": [
      "@unit"
    ],
    "unit": "clear && ./vendor/bin/phpunit --colors=always",
    "unit-coverage": "clear && XDEBUG_MODE=coverage ./vendor/bin/phpunit --stderr --colors=always"
  }
}
